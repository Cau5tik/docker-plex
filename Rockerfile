REQUIRE ["PLEXMEDIASERVER_VERSION", "PLEXAPTLIST"]

FROM ubuntu:15.10
MAINTAINER Tim Haak <tim@haak.co>

ENV DEBIAN_FRONTEND="noninteractive" TERM="xterm" RUN_AS_ROOT="true" \
    CHANGE_DIR_RIGHTS="false" CHANGE_CONFIG_DIR_OWNERSHIP="true" \
    HOME="/config"

ADD ./start.sh /start.sh
VOLUME ["/config","/data"]
EXPOSE 32400

CMD ["/start.sh"]

RUN echo "force-unsafe-io" > /etc/dpkg/dpkg.cfg.d/02apt-speedup \
    && echo "Acquire::http {No-Cache=True;};" > /etc/apt/apt.conf.d/no-cache \
    && apt-get -q update \
    && apt-get install -qy --force-yes curl \
    && echo "deb http://shell.ninthgate.se/packages/debian {{ .PLEXAPTLIST }} main" > /etc/apt/sources.list.d/plexmediaserver.list \
    && curl http://shell.ninthgate.se/packages/shell-ninthgate-se-keyring.key | apt-key add - \
    && apt-get -q update \
    && apt-get -qy --force-yes dist-upgrade \
    && apt-get install -qy --force-yes ca-certificates openssl sudo \
    && chmod u+x /start.sh

RUN apt-get install -qy --force-yes plexmediaserver=`apt-cache madison plexmediaserver | grep {{ .PLEXMEDIASERVER_VERSION }} | awk '{print $3}'` \
    && apt-get -y autoremove \
    && apt-get -y clean \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/* \

{{ if eq .PLEXAPTLIST "wheezy" }}
  PUSH timhaak/plex:{{ .PLEXMEDIASERVER_VERSION }}
  PUSH timhaak/plex:latest
{{ else }}
  PUSH timhaak/plexpass:{{ .PLEXMEDIASERVER_VERSION }}
  PUSH timhaak/plexpass:latest
{{ end }}
